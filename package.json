{
  "name": "challenge-super-frete",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "20"
  },
  "main": "dist/functions.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "env-cmd -f .env.local nest start",
    "start:dev": "env-cmd -f .env.local nest start --watch",
    "start:debug": "env-cmd -f .env.local nest start --debug --watch",
    "start:prod": "env-cmd -f .env.local node dist/apps/challenge-super-frete/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "env-cmd -f .env.local jest --watch",
    "test:cov": "env-cmd -f .env.local jest --coverage",
    "test:debug": "env-cmd -f .env.local node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "env-cmd -f .env.local jest --config ./shared/test/jest-e2e.json",
    "start:functions": "npm run build && firebase emulators:start --only functions",
    "start:shell": "npm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "env-cmd": "^10.1.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0",
    "git-commit-msg-linter": "^5.0.8",
    "jest-mock-extended": "^3.0.7",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^5.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s",
      "shared/**/*.(t|j)s",
      "!apps/challenge/src/triggers/*.(t|j)s",
      "!apps/challenge/src/function.ts",
      "!apps/challenge/src/main.ts",
      "!apps/**/*.module.ts",
      "!shared/@types/**/*.(t|j)s",
      "!shared/test/**/*.(t|j)s",
      "!shared/utils/database.(t|j)s",
      "!shared/utils/function-export.(t|j)s",
      "!shared/utils/create-server.(t|j)s",
      "!shared/middlewares/logger-middleware.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>",
      "<rootDir>/apps/"
    ]
  }
}
